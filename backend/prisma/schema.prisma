generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Modelo para criar as tarefas
model Task {
  id        Int      @id @default(autoincrement()) // o id da tarefa será chave primaria com autoincremento
  title     String                                 // texto da tarefa (colocar obrigatório?)
  completed Boolean  @default(false)                // se a tarefa está concluida (começar com false)
}